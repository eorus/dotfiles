#!/usr/bin/env sh

# Aliases

alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'


# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dir_colors && eval "$(dircolors -b ~/.dir_colors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias not="l3afpad"
alias tmpsil="sudo for i in /tmp/* ; do rm -r "$i" ; done"
alias ekran="sh .screenlayout/dock.sh"
alias bat='upower -i /org/freedesktop/UPower/devices/battery_BAT0| grep -E "state|to\ full|percentage"'
alias ll='ls -alF'
alias notes="clear && sncli sync && sncli"
alias first='sed -n "/ installed $1/{s/].*/]/p;q}" /var/log/pacman.log'
alias wiki="nvim -c VimwikiIndex"
alias ipadres="curl ipinfo.io/ip"
alias bc="bc -l"
alias la='ls -A'
alias l='ls -CF'
alias lh='ls -lh'
alias mx='tmuxinator'
alias stat='glances'
alias vim="nvim"
alias oldvim="\vim"
alias pbcopy="xclip -selection clipboard"
alias pbpaste="xclip -selection clipboard -o"
alias home="cd ~"
alias c="clear"
alias h="history"
alias p="cat"
alias pd="pwd"
alias ttr="trans -b :tr"
alias ten="trans -b tr:en"
alias tfen="trans -b tr:en file://Documents/Notes/vimwiki/notes/tasks/blogging.md"
alias u='cd ..'
alias hd='sh ~/deploy.sh'
alias ka="killall" \
  son="grep -i installed /var/log/pacman.log" \
	mkd="mkdir -pv" \
	cfi3="e ~/.config/i3/config" \
	cfbs="e ~/.config/bspwm/bspwmrc" \
	cfsx="e ~/.config/sxhkd/sxhkdrc" \
	cfal="e ~/.config/aliasrc" \
	cfdw="e ~/Templates/suckless/dwm/config.h" \
	mpv="mpv --input-ipc-server=/tmp/mpvsoc$(date +%s)" \
	calcurse="calcurse -D ~/.calcurse" \
	magit="nvim -c MagitOnly" \
	p="sudo pacman" \
	SS="sudo systemctl" \
	f="$FILE" \
	g="git" \
	trem="transmission-remote" \
	e="$EDITOR" \
	v="mpv --input-ipc-server=/tmp/mpvsoc$(date +%s)" \
	x="sxiv -ft *" \
	sdn="sudo shutdown -h now" \
	gua="git remote | xargs -L1 git push --all" \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
	YT="yt-dlp --add-metadata -i -o '%(upload_date)s-%(title)s.%(ext)s'" \
	yta="yt -x -f bestaudio/best" \
	yt="/usr/bin/ytfzf" \
	ref="shortcuts >/dev/null; source ~/.config/shortcutrc" \
	upc="checkupdates" \
	lsp="pacman -Qett --color=always | less" \
	ffmpeg="ffmpeg -hide_banner"
alias duf='du -hsx * | sort -rh | head -5'
alias treeacl='tree -A -C -L 2'
alias hava='wttr Istanbul'
alias wake='systemctl restart NetworkManager.service'
alias windows='sudo mount -t cifs //192.168.0.26/Ortak /mnt/ortak'
alias notgit='rsync -chavzP --stats --delete Documents/Notes/vimwiki eorus-home:~/Documents/notes/'
alias notgel='rsync -chavzP --stats --delete eorus-home:~/Documents/notes/vimwiki /home/eorus/Documents/Notes/'

alias yedek="sudo rsync -aAXv --delete --exclude=/dev/* --exclude=/proc/* --exclude=/sys/* --exclude=/tmp/* --exclude=/run/* --exclude=/mnt/* --exclude=/media/* --exclude="swapfile" --exclude="lost+found" --exclude="/home/$USER/.cache" --exclude="/home/$USER/Downloads" --exclude="/home/$USER/.VirtualBoxVMs"--exclude="/home/$USER/.ecryptfs" --exclude=/home/$USER/Desktop --exclude=/home/$USER/.cache --exclude=/home/$USER/.debug --exclude=/home/$USER/.dbus --exclude=/home/$USER/.gvfs --exclude=/home/$USER/.local/share/gvfs-metadata --exclude=/home/$USER/.local/share/Trash --exclude=/home/$USER/.recently-used --exclude=/home/$USER/.thumbnails --exclude=/home/$USER/.xsession-errors --exclude=/home/$USER/.Trash --exclude=/home/$USER/.steam --exclude=/home/$USER/Videos --exclude=/home/$USER/Steam / /mnt/backup"

command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d" # Use neovim for vim if present.
alias fzf='fzf --preview="head -$LINES {}"'
vf() { fzf | xargs -r -I % $EDITOR % ;}
