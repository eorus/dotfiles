<?php
/*
 * The Index Post (or excerpt)
 * ===========================
 * Used by index.php, category.php and author.php
 */
?>


<article role="article" id="post_<?php the_ID()?>" <?php post_class("border-bottom mb-3 card"); ?> >

<div class="card-body">
  <div class="row no-gutters">
    <div class="col-lg-6">
      <a href="<?php the_permalink(); ?>" title="<?php the_title_attribute(); ?>" >
	  	<?php the_post_thumbnail( 'fkulup-middle', array( 'class' => 'img-fluid card-img mb-3 w-100 rounded' ));?>
		  </a>
    </div>
    <div class="col-lg-6">
      <header>
       <h2 class="card-title h4">
      <a href="<?php the_permalink(); ?>">
        <?php the_title()?>
      </a>
       </h2>
       </header>
        <p class="card-text"><?php the_excerpt(); ?></p>
      </div>
    </div><!-- row -->
</div>
    <div class="card-footer text-muted">
       <p style="font-size: 0.8rem;" class="m-0 text-muted">
        <?php
         _e(' on ', 'b4st');
          b4st_post_date();
        ?>
        <?php
          _e('In ', 'b4st');
          the_category(', ');
          _e(' / ', 'b4st');

          if (has_tag()) {
            the_tags('Tags: ', ', ');
            _e(' / ', 'b4st');
          };

        ?>
      </p>
    </div>
</article>
