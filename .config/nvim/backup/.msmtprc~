defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.config/msmtp/msmtp.log

account gmail
host smtp.gmail.com
port 587
tls_starttls on
from alperor@gmail.com
user alperor@gmail.com
passwordeval "pass email/gmail/apppass"
