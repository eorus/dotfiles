! ST Terminal Configuration

st.termname:    st-256color

! Font
!st.font:        Fira Code Retina:style=Regular:pixelsize=18:antialias=true:autohint=false
!st.boldfont:    Fira Code Retina:style=Bold:pixelsize=18:antialias=true:autohint=false

! Preferred font string
! Example for st config.h: static const char *font = "JetBrains Mono:size=12:antialias=true:autohint=true";
