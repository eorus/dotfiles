#!/bin/sh

# dwm statusbar - show current date and time
status () {

	echo -n "BAT: $(acpi -b | awk '{ split($5,a,":"); print substr($3,0,2), $4, "["a[1]":"a[2]"]" }' | tr -d ',') | $(date '+%Y-%m-%d %H:%M:%S')"
}

while :; do

xsetroot -solid "#ff0000" -name "ðŸž¼ $(expr $(cat /sys/class/backlight/intel_backlight/brightness) / 49) ï©¾ $(pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')% $(status)"

	sleep 1

done &
