## Account settings
set from = eorus-gmail

# Headers
set realname = "Alper Orus"
set signature = "$HOME/.config/neomutt/alperor.sig"

set mbox_type = Maildir
set folder = "~/.local/share/email/eorus-gmail"

set sendmail = "msmtp -a eorus-gmail"

# cache settings
set header_cache = "~/.cache/neomutt/eorus-gmail/header_cache"
set message_cachedir = "~/.cache/neomutt/eorus-gmail/message_cache"

# mailbox settings
set spoolfile = +Inbox
set postponed = +Drafts
set record = +Sent
set trash = +Trash
set mbox = +Archive
set copy = no

color status green default

