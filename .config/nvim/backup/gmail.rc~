## Account settings
unmailboxes *
set from = "alperor@gmail.com"
set sendmail = "msmtp -a gmail"

color status color208 default

# Headers
set realname = "Alper Orus"
set signature = "$HOME/.config/neomutt/alperor.sig"

# cache settings
set header_cache = "~/.cache/mutt/gmail/header_cache"
set message_cachedir = "~/.cache/mutt/gmail/message_cache"

set mbox_type = Maildir
set folder = "~/Mail/gmail"
set spoolfile= "~/Mail/gmail/INBOX"
set postponed = "~/Mail/gmail/drafts"
set trash = "~/Mail/gmail/Trash"
set record="~/Mail/gmail/sent"

#Mailboxes
#mailboxes =INBOX
mailboxes =INBOX =sent =drafts =Trash =archive =spam
named-mailboxes "ï‚­  Inbox" =INBOX
