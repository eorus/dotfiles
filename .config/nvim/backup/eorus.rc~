## Account settings
unmailboxes *
set from = "alper@eorus.com"
set sendmail = "msmtp -a gmail"

color status color208 default

# Headers
set realname = "Alper Orus"
set signature = "$HOME/.config/neomutt/alperor.sig"

# cache settings
set header_cache = "~/.cache/mutt/eorus/header_cache"
set message_cachedir = "~/.cache/mutt/eorus/message_cache"

set folder          = "~/Mail/eorus"
set spoolfile       = "~/Mail/eorus/INBOX"
set record          = "=Sent"
set postponed       = "=Drafts"
set trash           = "=Trash"
set mbox_type       = Maildir

#Mailboxes
mailboxes =INBOX =Sent =Drafts
