<?php
/*
 * The Search Results (Main Header and) Loop
 */
?>

<header class="mb-5 text-center">
  <h1>
    <?php _e('Search Results for', 'b4st'); ?> &ldquo;<?php the_search_query(); ?>&rdquo;
  </h1>
</header>

<?php if(have_posts()): while(have_posts()): the_post(); ?>
  <article role="article" id="post_<?php the_ID()?>" <?php post_class("card")?>>
<div class="card-body">
   <div class="row">
      <div class="col-lg-4">
		  <a href="<?php the_permalink(); ?>" title="<?php the_title_attribute(); ?>" >
	  	<?php the_post_thumbnail( 'fkulup-small', array( 'class' => 'img-fluid mr-4' ));?>
		  </a>
      </div>
       <div class="col-lg-8">
	       <header>
	         <h2 style="font-size: 1.5rem;" class="card-title">
	           <a href="<?php the_permalink(); ?>">
	             <?php the_title()?>
	           </a>
	         </h2>
	       </header>
      <?php the_excerpt(); ?>
    	</div>
  </div><!-- row -->
</div><!-- card-body -->
  </article>
<?php endwhile; else: ?>
  <div class="entry-content">
    <article class="alert alert-warning px-3">
      <i class="fas fa-exclamation-triangle"></i> <?php _e('Sorry, your search yielded no results.', 'b4st'); ?>
    </article>
  </div>
<?php endif; ?>
