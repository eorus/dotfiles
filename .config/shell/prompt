# ~/.config/shell/prompt

# Colors
RESET="\[$(tput sgr0)\]"
BOLD="\[$(tput bold)\]"
DIM="\[$(tput dim)\]"
RED="\[$(tput setaf 1)\]"
GREEN="\[$(tput setaf 2)\]"
LIGHTYELLOW="\[$(tput setaf 229)\]"
MAGENTA="\[$(tput setaf 5)\]"

# Set prompt dynamically
set_prompt() {
    local EXIT="$?"
    local ARROW_COLOR=$([ $EXIT -eq 0 ] && echo "$GREEN" || echo "$RED")
    PS1="${MAGENTA}[\A] ${LIGHTYELLOW}\u ${BOLD}${RED}\W ${ARROW_COLOR}âžœ ${RESET}"
}
PROMPT_COMMAND=set_prompt
