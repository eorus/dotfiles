#! /bin/sh

# ┌─────────────┐
# │CONFIGURATION│
# └─────────────┘

bspc monitor -d I II III IV V VI
bspc monitor -g 1920x1200+0+0

bspc config border_radius                 8
bspc config border_width                  5
bspc config window_gap                    5
bspc config top_padding                   1
bspc config bottom_padding                0
bspc config left_padding                  0
bspc config right_padding                 0
bspc config click_to_focus                true
bspc config split_ratio                   0.70
bspc config focus_by_distance             true
bspc config focus_follows_pointer         true
bspc config pointer_follows_monitor       true
bspc config history_aware_focus           true
bspc config remove_disabled_monitors      true
bspc config merge_overlapping_monitors    true

# Behavior
bspc config smart_border true     # Hide border for fullscreen windows
bspc config single_monocle true   # Monocle layout equivalent
bspc config borderless_monocle            true
bspc config gapless_monocle               true

bspc config automatic_scheme spiral
bspc config initial_polarity first_child
bspc config removal_adjustment true

# Floating windows
# bspc rule -a \* state=floating    # Optional: float all dialogs if desired

bspc config pointer_modifier mod1
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

# ┌─────────────┐
# │COLORS       │
# └─────────────┘

bspc config normal_border_color		      "#4c566a"
bspc config active_border_color	        "#1e1e1e"
bspc config focused_border_color	      "#ebdbb2"
bspc config presel_feedback_color	      "#5e81ac"
bspc config urgent_border_color 	      "#dd2727"

# ┌─────┐
# │RULES│
# └─────┘

# fix programs starting in floating mode
bspc rule -a Gimp desktop=^6 follow=on state=floating
bspc rule -a Zathura state=tiled
bspc rule -a mpv state=floating
bspc rule -a Lxappearance state=floating
bspc rule -a Spotify desktop=^5 follow=on state=floating
bspc rule -a zoom desktop=^6 follow=on state=floating
bspc rule -a Galculator state=floating
bspc rule -a mpv state=floating
bspc rule -a File-roller state=floating
bspc rule -a Vimiv state=floating
bspc rule -a firefox state=floating
bspc rule -a Transmission-gtk state=floating

# ┌──────────────┐
# │ BRAVE BROWSER │
# └──────────────┘

# Float real dialog/popup windows
bspc rule -a "*:dialog" state=floating center=true
bspc rule -a "*:popup" state=floating center=true

bspc rule -a "Brave-browser:Browser" state=tiled
bspc rule -a "Brave-browser:Dialog" state=floating center=true
bspc rule -a "brave-browser" state=floating
bspc rule -a "brave" state=floating


#“Float anything that identifies itself as a dialog, utility, or splash screen.”
#bspc rule -a \* type~='(_NET_WM_WINDOW_TYPE_DIALOG|_NET_WM_WINDOW_TYPE_UTILITY|_NET_WM_WINDOW_TYPE_TOOLBAR|_NET_WM_WINDOW_TYPE_SPLASH)' state=floating

# ┌────────────────┐
# │STARTUP PROGRAMS│
# └────────────────┘

xsetroot -cursor_name left_ptr
pkill -USR1 -x sxhkd || /usr/bin/sxhkd &

# Kill old bars
killall -q polybar
while pgrep -x polybar >/dev/null; do sleep 0.2; done

# Launch main bar
if ! pgrep "polybar" > /dev/null 2>&1 ; then
    ~/.config/polybar/launch.sh &
fi
