# i3 config (cleaned for current setup)

set $inner_gaps 5
set $outer_gaps 5
set $term --no-startup-id $TERMINAL
set $mod Mod4

# Gaps and borders
for_window [class="^.*"] border pixel 5
default_border pixel 5
gaps inner $inner_gaps
gaps outer $outer_gaps
smart_gaps inverse_outer
smart_borders on

font pango:JetBrainsMono Nerd Font 10

# Floating windows
floating_modifier $mod
mouse_warping none
focus_follows_mouse no
workspace_auto_back_and_forth yes

# Terminal
bindsym $mod+Return exec i3-sensible-terminal

# Kill windows
bindsym $mod+q kill
bindsym Mod1+F4 kill

# Workspace navigation
bindsym $mod+Tab workspace back_and_forth

# Browser, file manager, email, editor
bindsym $mod+w exec --no-startup-id $BROWSER
bindsym $mod+shift+w exec $term -e nmtui
bindsym $mod+r exec $term -e ranger
bindsym $mod+e exec $term -e neomutt
bindsym $mod+v exec --no-startup-id $term -e $EDITOR -c "VimwikiIndex"

bindsym $mod+Shift+r exec --no-startup-id thunar
bindsym $mod+i exec $term -e htop

bindsym $mod+shift+m exec --no-startup-id $term -e ncmpcpp
bindsym $mod+o sticky toggle
bindsym $mod+p exec --no-startup-id mpc toggle
bindsym $mod+Escape workspace prev

